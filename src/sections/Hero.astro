---
import { Section } from "@/components"
import { GithubIcon, LinkedinIcon, MailIcon, PhoneIcon } from "@/icons"
import { basics } from "@cv-es"

const { name, label, location, image, email, phone, profiles } = basics
const { city, region, countryCode } = location

const SOCIAL_ICONS: Record<string, any> = {
	GitHub: GithubIcon,
	LinkedIn: LinkedinIcon,
}
---

<Section>
	<div>
		<div>
			<h1 class="text-4xl font-bold">{name}</h1>
			<h2 class="text-2xl font-medium">{label}</h2>
			<span class="text-gray-700">
				{city}, {region}
			</span>
			<footer class="">
				<footer class="flex items-center space-x-2">
					{
						email && (
							<a
								href={`mailto:${email}`}
								title={`Enviar un correo electrónico a ${email}`}
								target="_blank"
								class="text-gray-500 hover:text-gray-700"
							>
								<MailIcon />
							</a>
						)
					}
					{
						phone && (
							<a
								href={`tel:${phone}`}
								title={`Llamar por teléfono al número ${phone}`}
								target="_blank"
								class="text-gray-500 hover:text-gray-700"
							>
								<PhoneIcon />
							</a>
						)
					}
					{
						profiles.map(({ network, url }) => {
							const Icon = SOCIAL_ICONS[network]

							if (Icon) {
								return (
									<a
										href={url}
										title={`Visitar mi perfil en ${network}`}
										target="_blank"
										class="text-gray-500 hover:text-gray-700"
									>
										<Icon />
									</a>
								)
							}
						})
					}
				</footer>
			</footer>
			<figure>
				<img src={image} alt={name} />
			</figure>
		</div>
	</div>
</Section>
