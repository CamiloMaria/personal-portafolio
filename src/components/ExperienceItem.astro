---
interface Props {
	name: string
	position: string
	url?: string
	summary: string
	startDate: string
	endDate: string
}

const { name, position, url, summary, startDate, endDate } = Astro.props
---

<div
	class="relative mx-12 grid pb-12 before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 before:content-[''] dark:before:border-white/15 md:grid-cols-5 md:gap-10 md:space-x-4"
>
	<div class="relative pb-12 md:col-span-2">
		<div class="sticky top-0">
			<span class="absolute -left-[42px] rounded-full text-5xl text-yellow-500 dark:text-yellow-400"
				>&bull;</span
			>

			<h3 class="text-xl font-bold text-yellow-500 dark:text-yellow-400">{name}</h3>
			<h4 class="text-xl font-semibold text-gray-600 dark:text-white">{position}</h4>
			<time class="m-0 p-0 text-sm text-gray-600/80 dark:text-white/80"
				>{startDate} - {endDate || "Actualidad"}</time
			>
		</div>
	</div>
	<div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
		{summary}
		{
			url && (
				<a
					href={url}
					role="link"
					class="inline-flex items-center text-lg font-medium text-yellow-500 hover:text-yellow-700 dark:text-yellow-200 dark:hover:text-yellow-300"
				>
					Saber m√°s{" "}
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="icon icon-tabler icon-tabler-chevron-right w-5"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						stroke-width="2"
						stroke="currentColor"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<>
							<path stroke="none" d="M0 0h24v24H0z" fill="none" />
							<path d="M9 6l6 6l-6 6" />
						</>
					</svg>
				</a>
			)
		}
	</div>
</div>
